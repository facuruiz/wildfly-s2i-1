#!/bin/sh -e
#
# S2I run script for the 'springboot-sti' image.
# The run script executes the server that runs your application.
#
# For more information see the documentation:
#	https://github.com/openshift/source-to-image/blob/master/docs/builder_image.md
#



	echo "···································································································"
	echo "MARTIN FABRIZZIO VILCHE - https://github.com/mvilche"
	echo "···································································································"


if [ -z "$TIMEZONE" ]; then
	echo "···································································································"
	echo "VARIABLE TIMEZONE NO SETEADA - INICIANDO CON VALORES POR DEFECTO"
	echo "POSIBLES VALORES: America/Montevideo | America/El_Salvador"
	echo "···································································································"
else
	echo "···································································································"
	echo "TIMEZONE SETEADO ENCONTRADO: " $TIMEZONE
	echo "···································································································"
	cat /usr/share/zoneinfo/$TIMEZONE > /etc/localtime && \
	echo $TIMEZONE > /etc/timezone
fi


if [ -z "$CUSTOM_JAVA_OPTS" ]; then

	echo "···································································································"
	echo "VARIABLE CUSTOM_JAVA_OPTS NO ENCONTRADA"
	echo "···································································································"
else
	echo "···································································································"
	echo "VARIABLE CUSTOM_JAVA_OPTS ENCONTRADA: $CUSTOM_JAVA_OPTS"
	echo "···································································································"
fi

keytool -genkey -keyalg RSA -alias selfsigned -keystore /opt/wildfly/jolokia.jks -storepass password -validity 360 -keysize 2048 -dname "cn=Unknown, ou=Unknown, o=Unknown, c=Unknown"


	echo "···································································································"
	echo "INICIANDO APP..."
	echo "···································································································"

rm -rf /opt/wildfly/standalone/tmp /opt/wildfly/standalone/data /opt/wildfly/standalone/logs /opt/wildfly/standalone/deployments/*.deployed
exec /opt/wildfly/bin/standalone.sh -c custom/standalone.xml -b 0.0.0.0 $CUSTOM_JAVA_OPTS
